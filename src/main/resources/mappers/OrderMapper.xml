    <insert id="insertOrder" parameterType="java.util.List" useGeneratedKeys="false">
        insert into COFFEE_ORDER( "user_id",
                                  "order_no",
                                  "order_number",
                                  "total_price",
                                  "order_address",
                                  "goods_id",
                                  "good_name",
                                  "goods_size",
                                  "take_out",
                                  "goods_sugar")
        select t.* from(
        <foreach collection="list" item="item" separator=" union all ">
            (select
            #{item.userId},
            #{item.orderNo},
            #{item.orderNumber},
            #{item.totalPrice},
            #{item.orderAddress},
            #{item.goodsId},
            #{item.goodName},
            #{item.goodsSize},
            #{item.takeOut},
            #{item.goodsSugar}
            from dual)
        </foreach>)t
    </insert>

